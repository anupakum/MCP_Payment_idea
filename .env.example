# ============================================================================
# MCP Mode Configuration
# ============================================================================

# Enable HTTP-based MCP (set to "true" to use separate MCP HTTP server)
# If false or not set, uses direct Python mode (in-process)
USE_MCP_HTTP=true

# MCP HTTP Server URL (only used when USE_MCP_HTTP=true)
# Default: http://localhost:8001
MCP_URL=http://localhost:8001

# MCP HTTP Server Port (when starting the MCP server)
MCP_PORT=8001

# MCP HTTP Server Host (when starting the MCP server)
MCP_HOST=0.0.0.0

# ============================================================================
# AWS Configuration
# ============================================================================

AWS_REGION=us-east-1

# S3 Configuration for Document Storage
# ⚠️  REQUIRED: Set this to your S3 bucket name for document uploads
# For development: Use dev bucket name from terraform/dev.tfvars
# For production: Use prod bucket name from terraform/prod.tfvars
S3_BUCKET_NAME=ptr-dspt-rsln-agt-prod

# AWS Credentials
# ⚠️  SECURITY WARNING: Never commit real AWS credentials to git!
# ⚠️  For production on EC2: Use IAM role (recommended - no keys needed!)
# ⚠️  For GitHub Actions: Set these as GitHub Secrets
# ⚠️  For local development: Use AWS CLI configuration (aws configure)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ============================================================================
# FastAPI Server Configuration
# ============================================================================

PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# CORS Configuration for Frontend
# Use ${HOST_URL} for domain name or PUBLIC_IP - will be replaced by startup.sh
CORS_ORIGINS=https://${HOST_URL}:3000
# ============================================================================
# Logging Configuration
# ============================================================================

LOG_LEVEL=INFO

# ============================================================================
# CrewAI Configuration with AWS Bedrock
# ============================================================================

# Using AWS Bedrock Claude model instead of OpenAI
AWS_BEDROCK_MODEL_ID=anthropic.claude-haiku-4-5-20251001-v1:0
AWS_BEDROCK_REGION=us-east-1
CREW_MAX_ITERATIONS=3

# Optional: OpenAI (if you want to use OpenAI instead)
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Examples for Different MCP Modes
# ============================================================================

# Example 1: Direct Python Mode (Default - Simple)
# USE_MCP_HTTP=false
# AWS_REGION=us-east-1

# Example 2: HTTP-based MCP Mode (Microservices)
# USE_MCP_HTTP=true
# MCP_URL=http://localhost:8001
# AWS_REGION=us-east-1

# Example 3: HTTP-based MCP with Remote Server
# USE_MCP_HTTP=true
# MCP_URL=http://mcp-server.internal:8001
# AWS_REGION=us-east-1