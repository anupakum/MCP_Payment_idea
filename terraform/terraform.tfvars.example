# ============================================================================
# Terraform Variables Configuration
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values
# IMPORTANT: terraform.tfvars should be in .gitignore (never commit secrets!)
# ============================================================================

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# EC2 Configuration
instance_type = "t3.medium"  # 2 vCPU, 4 GB RAM (~$30/month)

# REQUIRED: EC2 Key Pair
# Create a key pair in AWS Console first: EC2 > Key Pairs > Create Key Pair
# Download the .pem file and save it securely
key_name = "your-keypair-name"  # CHANGE THIS!

# SSH Access Security
# IMPORTANT: Change this to your IP address for security!
# Get your IP: curl ifconfig.me
# Format: YOUR.IP.ADDRESS.HERE/32
allowed_ssh_cidr = "0.0.0.0/0"  # WARNING: This allows SSH from anywhere! Change to your IP!

# Storage
root_volume_size = 30  # GB

# Networking
enable_elastic_ip = true  # Static IP (recommended for production)

# DynamoDB Tables (already created)
dynamodb_tables = {
  customer_table = "ptr_dispute_resol_customer_cards_and_transactions"
  case_table     = "ptr_dispute_resol_case_db"
}

# Project Naming
project_name = "dispute-resolution"

# Bedrock Model
# bedrock_model_arn = "arn:aws:bedrock:*::foundation-model/anthropic.claude-haiku-4-5-20251001-v1:0"
# Only needed if using a different Bedrock model than the default
